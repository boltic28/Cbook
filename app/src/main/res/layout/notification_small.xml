<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_high"
    android:padding="@dimen/spaces_around_fragment"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/notification_timer"
        style="Notification.Timer"
        tools:text="left:   00:28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/notification_progress"/>

    <TextView
        android:id="@+id/notification_contact"
        style="@style/Notification.Contact"
        tools:text="Henri Robinson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    
    <SeekBar
        android:id="@+id/notification_progress"
        style="@style/Notification.Progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_timer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    
    
</RelativeLayout>