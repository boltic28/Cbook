<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Button.Delete">
        <item name="backgroundTint">@color/colorDelete</item>
    </style>

    <style name="Button.Create">
        <item name="backgroundTint">@color/colorCreate</item>
    </style>

    <style name="Button.Read">
        <item name="backgroundTint">@color/colorRead</item>
    </style>

</resources>