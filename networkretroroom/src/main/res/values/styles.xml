<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Mail" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorMail</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Second" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorSecond</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Second.Number">
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>