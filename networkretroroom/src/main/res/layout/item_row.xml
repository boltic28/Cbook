<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:text="01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_name"
        style="@style/Header"
        tools:text="igor"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_last_name"
        style="@style/Header"
        tools:text="mashkovich"
        app:layout_constraintLeft_toRightOf="@id/item_name"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_gender"
        style="@style/Second"
        tools:text="male"
        app:layout_constraintLeft_toRightOf="@+id/item_last_name"
        app:layout_constraintBottom_toBottomOf="@+id/item_last_name"
        />

    <TextView
        android:id="@+id/item_phone"
        style="@style/Second.Number"
        tools:text="+1-012-00-455521"
        app:layout_constraintLeft_toRightOf="@+id/item_image"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        />

    <TextView
        android:id="@+id/item_age"
        style="@style/Header"
        tools:text="25"
        app:layout_constraintRight_toRightOf="@+id/item_image"
        app:layout_constraintBottom_toBottomOf="@+id/item_image"
        />

    <TextView
        android:id="@+id/item_mail"
        style="@style/Mail"
        tools:text="mail@mail.com"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>