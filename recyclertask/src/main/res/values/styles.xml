<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Item" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:paddingStart">@dimen/item_padding_left_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="ItemView" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemPicture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
<!--        <item name="android:layout_marginBottom">@dimen/item_picture_margin</item>-->
    </style>

    <style name="ItemViewDelete" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">@dimen/item_height</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="background">@color/colorDelete</item>
    </style>

    <style name="FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:layout_gravity">center</item>
        <item name="maxImageSize">@dimen/fab_icon_size</item>
    </style>

</resources>